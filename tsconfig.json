{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitReturns": true,
        "allowJs": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "es2017",
        "strictNullChecks": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "lib": [
            "ES2020",
            "ESNext.Array",
            "dom"
        ],
        "types": [
            
        ],
        "baseUrl": "./",
        "paths": {
            "*": [
                "@types/*"
            ],
            "@shared/*": [
                "./shared/*"
            ]
        }
    },
    "compileOnSave": true,
    "include": [
        "src"
    ]
}